extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Gestor de Tarefas
            .w3-container
                form.w3-container(action='/aluno' method='POST' )
                    label.w3-teal
                        b Descrição da tarefa
                    input.w3-input.w3-border.w3-light-grey(type='text' name='descricao' required)
                    label.w3-teal
                        b Data
                    input.w3-input.w3-border.w3-light-grey(type="date" name='data')
                    input.w3-btn-blue-grey(type="submit" value="Submeter")
            <hr>
            .w3-container
                div.w3-panel.w3-topbar.w3-bottombar.w3-border-blue.w3-teal
                    h3 Lista de Tarefas
                table.w3-table-all
                    tr
                        th Descrição
                        th Data
                    each al in lista
                        tr
                            td=al.descricao
                            td=al.data
            <hr>
            footer.w3-container.w3-teal 
                address Gerado pelo Gestor de Tarefas
            