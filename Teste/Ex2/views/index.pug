extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-teal.w3-margin-top
        h3 CLAV: Classificação e Avaliação da Informação Pública
    .w3-card-4
      header.w3-container.w3-teal.w3-margin-top
        h4 Lista de Entidades (Informações mínimas)
      table.w3-table-all
        tr
          th Identificador
          th Sigla
          th Designação
          th Estado
        each ent in lista
                tr
                    td
                      a(href="http://localhost:5004/entidades/" + ent.id)=ent.id
                    td= ent.sigla
                    td= ent.designacao
                    td= ent.estado
    footer.w3-container.w3-teal Desenvolvido por Pedro Lima
        


