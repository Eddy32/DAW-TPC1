extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal.w3-margin-top
                h3= lista.designacao
            table.w3-table-all
                tr
                    th Sigla
                        td= lista.sigla
                tr
                    th Designacao
                        td= lista.designacao
                tr
                    th Estado
                        td= lista.estado
        .w3-card-4
            header.w3-container.w3-teal.w3-margin-top
                h3 Entidades:
            table.w3-table-all
                tr
                    th Identificador
                    th Sigla
                    th Designação
                each e in ents
                    tr
                        td
                            a(href='http://localhost:3232/entidades/' + e.id)= e.id
                        td= e.sigla
                        td= e.designacao
        .w3-card-4
            header.w3-container.w3-teal.w3-margin-top
                h3 É proprietário dos processos:
            table.w3-table-all
                tr
                    th Código
                    th Identificador
                    th Título
                each p in lista.dono
                    tr
                        td
                            a(href='http://clav.dglab.gov.pt/classes/consultar/c' + p.codigo)= p.codigo
                        td= p.id
                        td= p.titulo
        .w3-card-4
            header.w3-container.w3-teal.w3-margin-top
                h3 Participa nos Processos:
            table.w3-table-all
                tr
                    th Código
                    th Identificador
                    th Título
                    th Tipo de Paricipante
                each pr in lista.participante
                    tr
                        td
                            a(href='http://clav.dglab.gov.pt/classes/consultar/c' + pr.codigo)= pr.codigo
                        td= pr.id
                        td= pr.titulo
                        td= pr.tipoPar

    footer.w3-container.w3-teal Desenvolvido por Pedro Lima
            a(href='javascript:history.go(-1)')
                button.w3-button.w3-green.w3-margin Voltar