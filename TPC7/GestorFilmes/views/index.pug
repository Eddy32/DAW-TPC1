extends layout
block content
  .w3-container
    h1 Gestão de uma Lista de Filmes
    .w3-card-4

      header.w3-container.w3-teal
        h3 Adicionar Filme
      .w3-container
        form.w3-container(action='/filmes' method='POST')
          label
            b Título
          input.w3-input.w3-border(type='text' name='title' )
          label
            b Ano
          input.w3-input.w3-border(type='text' name='year' )
          input.w3-btn.w3-blue-grey(type='submit' value='Adicionar')
      .w3-container
          div.w3-panel.w3-topbar.w3-bottombar.w3-border-blue.w3-teal
              h3 Lista de Cancções
          table.w3-table-all
            tr
              th Título
              th Ano
              th Elenco
              th Genero
              th Operações
            each f in filmes
              tr
                td= f.title
                td= f.year
                td
                    ul
                        each c in f.cast
                            li= c
                td
                    ul
                        each g in f.genres
                            li= g
                td 
                      button.w3-button.w3-circle.w3-blue(onclick="eliminar('" + f._id + "')") Apagar
                      a(href='/filmes/'+ f.id)
                                button.w3-button.w3-circle.w3-blue Detalhes
      footer.w3-container.w3-teal
          address Gerado por Lista de Filmes
                
